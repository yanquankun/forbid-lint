{
  "name": "@vexjs/forbid-lint",
  "version": "0.0.1",
  "description": "一个用于前端工程中禁止修改lint文件的插件",
  "main": "dist/index.js",
  "bin": {
    "forbid-lint": "./dist/index.js"
  },
  "scripts": {
    "eslint": "eslint src --ext .ts",
    "dev": "nodemon --watch src --ext ts --exec \"ts-node -r tsconfig-paths/register src/index.ts\"",
    "build": "rimraf dist && tsc -p tsconfig.prod.json && tsc-alias && pnpm gulp",
    "gulp": "gulp",
    "test": "pnpm concurrently 'pnpm build' 'nodemon --watch src --ext ts --exec \"pnpm build && sh test-install.sh\"'",
    "jest": "jest --config=jest.config.ts",
    "publish": "tsx scripts/publishCI.ts"
  },
  "files": [
    "dist",
    "README",
    "CHANGELOG",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yanquankun/forbid-lint"
  },
  "bugs": {
    "url": "https://github.com/yanquankun/forbid-lint/issues"
  },
  "homepage": "https://github.com/yanquankun/forbid-lint/blob/master/README.md",
  "author": "yanquankun",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "lint",
    "fe",
    "forbid"
  ],
  "engines": {
    "node": ">= 14.0.0"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/gulp": "^4.0.17",
    "@types/gulp-copy": "^0.0.7",
    "@types/gulp-terser": "^1.2.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.71",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "gulp": "^5.0.0",
    "gulp-copy": "^5.0.0",
    "gulp-terser": "^2.1.0",
    "jest": "^29.7.0",
    "mri": "^1.2.0",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "semver": "^7.6.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10"
  },
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "7.1.0",
    "core-js": "^3.40.0",
    "ejs": "^3.1.10",
    "enquirer": "^2.4.1",
    "execa": "^4.1.0",
    "find-up": "^7.0.0",
    "fs-extra": "^11.2.0",
    "globby": "11.0.2",
    "ora": "5.3.0",
    "promise.withresolvers": "^1.0.3",
    "strip-ansi": "6",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1"
  }
}
